<div data-type="module" data-module="Collective.Home.Gallery">

<nav class="submenu">
    <ul data-bind="foreach: FilterTypes">
        <li data-bind="click: $parent.ChangeFilter, css: { active: $parent.CurrentFilter() === $data }">
            <a href="#" data-bind="text: $data"></a>
        </li>
    </ul>    
</nav>

<aside class="gallery">		        	
			
    <span data-key="FilterBy"></span>
    <div class='selectBox'>
        <a class='selected' data-bind="click: ShowOptions, text: CurrentValue"></a>
        <span class='selectArrow' data-bind="click: ShowOptions">&#9660</span>
        <div class="selectOptions" data-bind="foreach: Filters">
            <a class="selectOption" href="#" 
                data-bind="text: Text, click: $parent.SetValue, attr: { 'data-filter': Name }">
            </a>		 
        </div>
    </div>
                                   
    <h2 data-bind="text: CurrentFilter"></h2>
    <p data-bind="text: CurrentFilterDescription"></p>
</aside>

<section>
    <div id="container" data-bind="foreach: Items">                      
        <div data-bind="attr: { class: Filters }">
            <a href="#">
                <img data-bind="attr: { src: Photo }" width="200">
            </a>

		    <h2 data-bind="text: Artist"></h2>                    
            <h3 data-bind="text: Name"></h3>                     
        </div>                                                            
    </div>
</section>

</div>