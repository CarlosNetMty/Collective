@{
    ViewBag.Title = "Cover Images Administration";
    Layout = "~/Views/Shared/_Administration.cshtml";
}

<div data-type="module" data-module="Collective.Admin.Cover">
    <table style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: Items">
            <tr>
                <td data-bind="text: Name"></td>
                <td data-bind="text: Artist"></td>
                <td data-bind="click: $parent.Remove"><a>Remove</a></td>
            </tr>
        </tbody>
    </table>
</div>
