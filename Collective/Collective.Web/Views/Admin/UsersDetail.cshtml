@model int

@{
    ViewBag.Title = "User Detail";
    Layout = "~/Views/Shared/_Administration.cshtml";
}

<div data-type="module" data-module="Collective.Admin.UserDetail">

    <div class="row">
        
        <div class="large-7 columns">

            <div style="width: 100%; height: 200px;" data-bind="visible: !HasHistory()">
                <p>No purchase information available</p>
            </div>

            @* *** Purchase History *** *@
            <table style="width: 100%;" data-bind="visible: HasHistory()">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: History">
                    <tr>
                        <td data-bind="text: Date"></td>
                        <td data-bind="text: Status"></td>
                        <td data-bind="text: Amount"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="large-5 columns detalle-compra">

            <small>User ID</small>
            <span data-bind="text: CurrentID"></span>
            <small>Name</small>
            <span data-bind="text: Name"></span>
            <small>Email</small>
            <span data-bind="text: Email"></span>

            <ul class="button-group">
                <li><a href="#" class="small button cancel" data-bind="text: ActiveCaption">Deactivate</a></li>
                <li><a href="#" class="small button">To Admin</a></li>
            </ul>      
        </div>

    </div>
</div>